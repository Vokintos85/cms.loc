{
  "version": "1.0.0",
  "name": "vokintos/projectcms",
  "autoload": {
    "psr-4": {
      "Plugin\\": "content/plugins/",
      "Engine\\": "engine",
      "Cms\\": "cms",
      "Admin\\": "admin"
    }
  },
  "authors": [
    {
      "name": "Sergey",
      "email": "gizya_85@mail.ru"
    }
  ],
  "require": {
    "ext-mbstring": "*",
    "ext-pdo": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpunit/phpunit": "^9.5",
    "mockery/mockery": "^1.5",
    "phpstan/phpstan": "^1.9",
    "vimeo/psalm": "^5.0",
    "symfony/var-dumper": "^5.4",
    "roave/security-advisories": "dev-latest"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "cs-check": "phpcs --standard=PSR12 admin/ cms/ content/ engine/",
    "cs-fix": "phpcbf --standard=PSR12 admin/ cms/ content/ engine/ tests/",
    "stan": "phpstan analyse admin/ cms/ content/ engine/ --level=8",
    "quality": [
      "@cs-check",
      "@stan",
      "@test"
    ],
    "fix": [
      "@cs-fix"
    ],
    "ci": [
      "@cs-check",
      "@stan",
      "@test"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}